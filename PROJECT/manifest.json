{
    "manifest_version": 2,
    "name": "Website Scanner",
    "version": "1.0",
    "description": "Scans a website for specific words.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }
  